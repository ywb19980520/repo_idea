<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imlty.dao.ResourceCategoryMapper">
    <!--查询所有资源分类-->
    <select id="findAllResourceCategory" resultType="com.imlty.domain.ResourceCategory">
        select * from resource_category
    </select>
    <!--修改资源目录信息-->
    <update id="updateResourceCategory" parameterType="com.imlty.domain.ResourceCategory">
        UPDATE resource_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="sort != null and sort != ''">
                sort = #{sort},
            </if>
                updated_time = #{updatedTime},
                updated_by = #{updatedBy}
        </trim>
        <where>
            <if test="id != null and id != '' ">
                id = #{id}
            </if>
        </where>
    </update>
    <!--新增资源目录信息-->
    <insert id="saveResourceCategory" parameterType="com.imlty.domain.ResourceCategory">
        insert into resource_category values (null,#{name},#{sort},#{createdTime},#{updatedTime},#{createdBy},#{updatedBy})
    </insert>
    <!--deleteResourceCategoryById根据id删除资源目录-->
    <delete id="deleteResourceCategoryById" parameterType="int">
        delete from resource_category where id =#{id}
    </delete>
</mapper>